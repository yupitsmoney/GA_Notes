<h1>Add a new bean!</h1>

<%= form_for @bean do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :roast %>
        <%= f.text_field :roast %>
    </div>

    Origin:
    <%= f.fields_for :place_of_origin do |origin_form| %>
        <%= origin_form.label :country %>:<%= origin_form.text_field :country %>
        <%= origin_form.label :province %>:<%= origin_form.text_field :province %>
    <% end %>

    <div>
        <%= f.label :quantity %>
        <%= f.text_field :quantity %>
    </div>

    <%= f.submit "Add new bean!" %>

<% end %>

<%= link_to "Back to the list!", beans_path %>